<?php
function showIcon()
{
  echo "<link rel='icon' type='image/gif' href='images/favicon.ico'>";
}

function showLogo()
{
  echo "<div id='logo'><a href='index.php'><img src='images/big_logo.jpg'></a></div>\n";
}

function useJqueryUICode()
{
  require_once("js/jquery_header.js");  //include all the jquery libraries
  echo "<script type='text/javascript' src='js/globals.js'></script>\n";  //initializes and sets the global user and authenticated variables if there's a cookie
  echo "<script type='text/javascript' src='js/ajax.js'></script>\n";  //loads user-specific html content if a cookie's been set
  echo "<script type='text/javascript' src='js/tabs.js'></script>\n";  //sets up the tab-based user interface
  echo "<script type='text/javascript' src='js/button_handler.js'></script>\n";  //deals with buttons
  //  echo "<script type='text/javascript' src='js/validation.js'></script>\n";  //validates various forms--I should probably move to the jquery pluginz
  echo "<script type='text/javascript' src='js/forms.js'></script>\n";  //takes care of the login form
  echo "<script type='text/javascript' src='js/formHelper.js'></script>\n"; //takes care of form amenities like datepickers, sliders, etc
  echo "<script type='text/javascript' src='js/login.js'></script>\n";  //takes care of login display and requests
  echo "<script type='text/javascript' src='js/feedback.js'></script>\n";  //handles display of the feedback form
  echo "<script type='text/javascript' src='js/create.js'></script>\n";  //handles the interface on the 'create meeting' page
  echo "<script type='text/javascript' src='js/accounts.js'></script>\n";  //handles the interface on the 'create account' page
  echo "<script type='text/javascript' src='js/info.js'></script>\n";  //opens and loads content into a 'help' tab
  echo "<script type='text/javascript' src='js/register.js'></script>\n";  //opens and loads content into a 'register' tab
  echo "<script type='text/javascript' src='js/profile.js'></script>\n";  //displays and handles the UI for the 'my profile' page
  echo "<script type='text/javascript' src='js/init.js'></script>\n";  //initializes the ui
}

function useJquerySignupUICode()
{
  require_once("js/jquery_header.js");  //include all the jquery libraries
  echo "<script type='text/javascript' src='js/globals.js'></script>\n";  //initializes and sets the global user and authenticated variables if there's a cookie
  echo "<script type='text/javascript' src='js/button_handler.js'></script>\n";  //deals with buttons
  echo "<script type='text/javascript' src='js/forms.js'></script>\n";  //takes care of the login form
  echo "<script type='text/javascript' src='js/login.js'></script>\n";  //takes care of login display and requests
  echo "<script type='text/javascript' src='js/signupsInit.js'></script>\n";  //initializes the ui
}

function useJavascriptUtils()
{
  echo "<script type='text/javascript' src='js/utf8_encode.js'></script>\n";  //required by the sha1 function
  echo "<script type='text/javascript' src='js/sha1.js'></script>\n";  //for sha1 encoding

}

function useJqueryEffects()
{
echo "<script type='text/javascript' src='ui/effects.core.js'></script>\n
<script type='text/javascript' src='ui/effects.explode.js'></script>";
}

function useJqueryCSS()
{
  echo "<link type='text/css' href='css/ui-lightness/jquery-ui-1.7.2.custom.css' rel='stylesheet' />\n";
}

function useMeetlieCSS()
{
  echo "<LINK href='css/style.css' rel='stylesheet' type='text/css'>\n";
  echo "<LINK href='css/create.css' rel='stylesheet' type='text/css'>\n";
  echo "<LINK href='css/feedback.css' rel='stylesheet' type='text/css'>\n";
  echo "<LINK href='css/forms.css' rel='stylesheet' type='text/css'>\n";
  echo "<LINK href='css/signup.css' rel='stylesheet' type='text/css'>\n";
  echo "<LINK href='css/matches.css' rel='stylesheet' type='text/css'>\n";
  echo "<LINK href='css/header.css' rel='stylesheet' type='text/css'>\n";
}

function useGoogleAnalytics()
{
echo "<script type=\"text/javascript\">
    var gaJsHost = ((\"https:\" == document.location.protocol) ? \"https://ssl.\" : \"http://www.\");
  document.write(unescape(\"%3Cscript src='\" + gaJsHost + \"google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E\"));
</script>
<script type=\"text/javascript\">
    try {
    var pageTracker = _gat._getTracker(\"UA-3535064-2\");
    pageTracker._trackPageview();
  } catch(err) {}</script>\n";
}

function printFooter()
{
  echo "</body></html>";
}

?>